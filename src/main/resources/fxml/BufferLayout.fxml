<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<fx:root hgap="10.0" stylesheets="@../css/CommonStyle.css" type="javafx.scene.layout.GridPane" vgap="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
    <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TextArea fx:id="buffer" prefHeight="75.0" prefWidth="100.0" GridPane.columnSpan="2" />
      <HBox GridPane.rowIndex="1">
         <children>
            <Button fx:id="readClipboardButton" mnemonicParsing="false" onAction="#handleReadClipboardButtonAction" text="Read From Clipboard" />
         </children>
      </HBox>
      <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <Button fx:id="writeClipboardButton" mnemonicParsing="false" onAction="#handleWriteClipboardButtonAction" text="Write To Clipboard" />
         </children>
      </HBox>
      <HBox GridPane.rowIndex="2">
         <children>
            <Button mnemonicParsing="false" onAction="#handleClearBufferButtonAction" text="Clear Buffer" />
         </children>
      </HBox>
      <HBox GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
            <RadioButton fx:id="bufferWrapText" mnemonicParsing="false" onAction="#handleBufferWrapTextRadioButtonAction" text="Wrap Text" />
         </children>
      </HBox>
      <HBox GridPane.rowIndex="3">
         <children>
            <Button id="remove-buffer-button" fx:id="removeBufferButton" mnemonicParsing="false" onAction="#handleRemoveBufferButtonAction" text="Remove Buffer" />
         </children>
      </HBox>
   </children>
</fx:root>
